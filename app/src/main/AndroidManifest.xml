<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vobis.example.com.gamification" >
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".mainactivity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shakespear.ShakespearActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".gallery.Gallery"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_gallery"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".gamification.Gamification"
            android:label="@string/title_activity_gamification" >
        </activity>
        <activity
            android:name=".accelerometer.AccelerometerPlayActivity"
            android:label="@string/title_activity_accelerometer" >
        </activity>
        <activity
            android:name=".compass.CompassActivity"
            android:label="@string/title_activity_compass" >
        </activity>
        <activity
            android:name=".contactmanager.ContactAdder"
            android:label="@string/title_activity_contact_adder" >
        </activity>
    </application>

</manifest>
